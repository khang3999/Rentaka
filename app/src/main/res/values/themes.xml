<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Rentaka" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.MaterialDatePicker" parent="Theme.Material3.Light.NoActionBar" />

    <style name="Theme.Carrental" parent="Base.Theme.Rentaka" />

    <style name="CustomOutlinedCallButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textSize">@dimen/call_button</item>
        <item name="fontFamily">@string/call_button_font</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/call_button_stroke_width</item>
        <item name="icon">@drawable/ic_phone_call_foreground</item>
        <item name="iconTint">@color/green</item>
        <item name="iconSize">@dimen/call_ic_button</item>
        <item name="iconPadding">@dimen/call_ic_padding</item>
    </style>

    <style name="CustomOutlinedMessageButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textSize">@dimen/call_button</item>
        <item name="fontFamily">@string/call_button_font</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/call_button_stroke_width</item>
        <item name="icon">@drawable/ic_message_foreground</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">@dimen/call_ic_button</item>
        <item name="iconPadding">@dimen/call_ic_padding</item>
    </style>

    <style name="CustomConfirmButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="CustomPromotionCodeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@string/call_button_font</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/ic_promotion_code_foreground</item>
    </style>

    <style name="CustomDriverLicenseCodeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@string/call_button_font</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/ic_promotion_code_foreground</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow_star</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/SupportScreenTitleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SmallTextGreyStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="SmallTextBoldStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PriceTextStyle">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/green</item>
    </style>


    <dimen name="SupportScreenTitleTextSize">20sp</dimen>
