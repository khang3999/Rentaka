<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<RelativeLayout

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    tools:context=".fragment.PersonalProfileFragment"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#dff3e8" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_account"
        android:scaleType="fitCenter"
        android:src="@drawable/custom_avatar" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Đỗ Ngọc Hiếu"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- LinearLayout to wrap RecyclerViews -->
    <LinearLayout
        android:id="@+id/listRycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textName"
        android:orientation="vertical">

        <!-- RecyclerView 1 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_list_recycle" />

        <!-- RecyclerView 2 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_list_recycle" />

        <!-- RecyclerView 3 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_list_recycle" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listRycle"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_log_out"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Đăng xuất"
            />

    </LinearLayout>

</RelativeLayout>
</ScrollView>