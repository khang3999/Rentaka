                    android:background="@drawable/custom_button_account"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textSize="50sp"
                    android:textColor="@color/gray_black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />



            </LinearLayout>

