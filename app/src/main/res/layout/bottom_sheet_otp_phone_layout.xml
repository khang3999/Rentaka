                android:text="+84384949494"
                android:textStyle="bold"
                android:textSize="@dimen/_15sp"
                />

            <LinearLayout
                android:id="@+id/OTP_Linear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
